<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_p3_animation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.meenutarun.cse227_2020.P3Animation">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:onClick="RotateScale"
            android:text="rotatescale"
            android:id="@+id/b1"/>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:onClick="MovetheImage"
            android:text="Move"
            android:id="@+id/b2"/>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:onClick="Sequenceofimages"
            android:text="Sequence"
            android:id="@+id/b3"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:onClick="StopSequence"
            android:text="StopS"
            android:id="@+id/b4"/>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:onClick="fade"
            android:text="Fade"
            android:id="@+id/b5"/>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:onClick="blink"
            android:text="Blink"
            android:id="@+id/b6"/>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:onClick="slide"
            android:text="Slide"
            android:id="@+id/b7"/>


    </LinearLayout>


    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="60dp"
        android:id="@+id/i1"
        />
</LinearLayout>


